
            <!-- main start  -->
            <main>
                <div class="container-fluid px-4">
                  <h1 class="mt-4" style="text-align: center;">{{categories.category_name}}</h1>               
                  {{!-- <h2 class="mt-4" style="text-align: center;">{{{idea_name}}}</h2> --}}
                  
            <!-- carousel start  -->
            
            <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
              <div class="carousel-indicators">
                {{#each categories.Ideas as | idea |}}
                  {{#if @first}}
                <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="{{@index}}" class="active" aria-current="true" aria-label="Slide {{@index}}"></button>
                    {{else}}
                <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="{{@index}}" aria-label="Slide {{index}}"></button>
                  {{/if}}
                {{/each}}
              </div>
              
              <div class="carousel-inner">
                {{#each categories.Ideas as | idea |}}
                  {{#if @first }}
                    {{#if (link_jpg idea.link_name)}}
                <div class="carousel-item active" 
                style="background-image: url('{{idea.link_name}}'); background-size: contain">
                </div>
                    {{/if}}
                    {{#if (link_youtube idea.link_name)}}
                <div class="carousel-item active">
                  <iframe 
                  src="{{idea.link_name}}" width="100%" height="100%" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen>
                  </iframe>
                </div>
                    {{/if}}
                    {{#if (link_giphy idea.link_name)}}
                <div class="carousel-item active">                 
                  <iframe 
                  src="{{idea.link_name}}" width="100%" height="100%" frameBorder="0" class="giphy-embed" allowFullScreen>
                  </iframe>                 
                </div>
                    {{/if}}

                  {{else}}

                    {{#if (link_jpg idea.link_name)}}
                <div class="carousel-item" 
                style="background-image: url('{{idea.link_name}}'); background-size: contain">
                </div>
                    {{/if}}
                    {{#if (link_youtube idea.link_name)}}
                <div class="carousel-item">
                  <iframe 
                  src="{{idea.link_name}}" width="100%" height="100%" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen>
                  </iframe>
                </div>
                    {{/if}}
                    {{#if (link_giphy idea.link_name)}}
                <div class="carousel-item">                 
                  <iframe 
                  src="{{idea.link_name}}" width="100%" height="100%" frameBorder="0" class="giphy-embed" allowFullScreen>
                  </iframe>                 
                </div>
                    {{/if}}
                  {{/if}}
                {{/each}}
              </div>

              <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
              </button>
              
              <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
              </button>
            </div>
            <!-- carousel end   -->

            <!-- description start -->
            {{!-- <div class="card mb-4">
              <div class="card-header">
                  <i class="fas fa-book-open me-1"></i>
                  Description
              </div>
              <div class="card-body" style="text-align: center;"> 
                  {{categories.description}}
              </div>
            </div> --}}
            <!-- description end -->
            
            <!-- table start -->
            <div class="card mb-4">
              <div class="card-header">
                  <i class="fas fa-table me-1"></i>
                  {{categories.category_name}}
              </div>
              <div class="card-body">
                  <table id="datatablesSimple">
                      <thead>
                          <tr>
                              <th>User</th>
                              <th>Content</th>
                              <th>Created</th>
                              <th>Link</th>                                 
                          </tr>
                      </thead>
                      <tfoot>
                          <tr>
                              <th>User</th>
                              <th>Content</th>
                              <th>Created</th>
                              <th>Link</th>    
                          </tr>
                      </tfoot>

                      <tbody>
                          {{#each categories.Ideas as | idea |}}
                          <tr>
                            <td>{{idea.user.username}}</td>
                            <td><a href="/idea/{{idea.id}}">{{idea.idea_name}}</a></td>
                            <td>{{format_date idea.createdAt}}</td>
                            <td><a href="{{idea.link_name}}">{{idea.link_name}}</a></td>  
                          </tr>
                          {{/each}}
                      </tbody>

                  </table>
              </div>
          </div>
      </div>
    </main>

