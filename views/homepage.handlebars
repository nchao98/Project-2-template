<!-- main start  -->
            <main>
                <div class="container-fluid px-4">
                  <h1 class="mt-4" style="text-align: center;"></h1>               
                  {{!-- <h2 class="mt-4" style="text-align: center;">{{ ideas.[0].idea_name }}</h2> --}}
                  
            <!-- carousel start  -->
            
            <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
              <div class="carousel-indicators">
                {{#each ideas as | idea |}}
                  {{#if @first }}
                <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="{{@index}}" class="active" aria-current="true" aria-label="Slide {{@index}}"></button>
                    {{else}}
                <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="{{@index}}" aria-label="Slide {{index}}"></button>
                  {{/if}}
                {{/each}}
              </div>
              
              <div class="carousel-inner">
                {{#each ideas as | idea |}}
                  {{#if @first }}
                    {{#if (link_jpg idea.link_name)}}
                <div class="carousel-item active" 
                style="background-image: url('{{idea.link_name}}'); background-size: contain">
                </div>
                    {{/if}}
                    {{#if (link_youtube idea.link_name)}}
                <div class="carousel-item active">
                  <iframe 
                  src="{{idea.link_name}}" width="100%" height="100%" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen>
                  </iframe>
                </div>
                    {{/if}}
                    {{#if (link_giphy idea.link_name)}}
                <div class="carousel-item active">                 
                  <iframe 
                  src="{{idea.link_name}}" width="100%" height="100%" frameBorder="0" class="giphy-embed" allowFullScreen>
                  </iframe>                 
                </div>
                    {{/if}}

                  {{else}}

                    {{#if (link_jpg idea.link_name)}}
                <div class="carousel-item" 
                style="background-image: url('{{idea.link_name}}'); background-size: contain">
                </div>
                    {{/if}}
                    {{#if (link_youtube idea.link_name)}}
                <div class="carousel-item">
                  <iframe 
                  src="{{idea.link_name}}" width="100%" height="100%" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen>
                  </iframe>
                </div>
                    {{/if}}
                    {{#if (link_giphy idea.link_name)}}
                <div class="carousel-item">                 
                  <iframe 
                  src="{{idea.link_name}}" width="100%" height="100%" frameBorder="0" class="giphy-embed" allowFullScreen>
                  </iframe>                 
                </div>
                    {{/if}}
                  {{/if}}
                {{/each}}
              </div>

              <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
              </button>
              
              <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
              </button>
            </div>
            <!-- carousel end   -->

            <!-- description start -->
            <div class="card mb-4">
              <div class="card-header">
                  <i class="fas fa-book-open me-1"></i>
                  Welcome to ShareSp@ce!
              </div>
              <div class="card-body" style="text-align: center;"> 
                  The place to share all of your favorite ideas, pictures, videos, and GIFs about 10 of the most popular subjects on the web!
              </div>
            </div>
            <!-- description end -->
            
    </main>
    